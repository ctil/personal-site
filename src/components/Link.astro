---
interface Props {
    href: string;
    title: string;
    description?: string;
}
const { href, title, description } = Astro.props;
---

<div class="flex items-center">
    <a
        href={href}
        class="text-sky-500 hover:text-yellow-400 hover:underline"
        target="_blank"
        rel="noopener noreferrer"
    >
        {title}
    </a>
    {description && <span class="text-gray-500 ml-2"> - {description}</span>}
</div>
